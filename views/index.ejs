<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/home.css" />
<%- include('./partials/nav') %>

<main>
  <section>
    <h2>Restaurants near GA</h2>
    <div class="flex">
      <% restaurants.forEach((r) => { %>
        <div class="card" style="width: 22rem;">
          <div class="img-container">
            <img class="card-img-top" src=<%= r.image_url %>  alt="Card image cap">
          </div>

          <div class="rating">
            <li><i class="fa-solid fa-star"></i><%= r.rating %></li>
          </div>
          
          <div class="card-body">
            <h5 class="card-title"><%= r.name %> </h5>
            <p><%= r.price %></p>
            <p><%= r.categories[0].title %></p>
            <p>Location: <%= r.location.display_address %></p>
            <a href="/restaurants/<%= r._id %>" class="btn btn-primary">Detail</a>
            <a href="<%= r.url %> class=btn btn-primary" class="btn btn-primary">Website</a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</main>



<%- include('./partials/footer') %>
